<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Eselon.HomeEselonFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/im_logo"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/suratrc"
                />
            <TextView
                android:id="@+id/tvlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/im_logo"
                fontPath="fonts/MFbold.otf"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Selamat Datang di Aplikasi Surat "
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/tvlogo"
                android:orientation="vertical"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/menu1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgall">
                        <ImageView
                            android:id="@+id/surat1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/suratrc"/>
                        <TextView
                            android:id="@+id/jds1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            fontPath="fonts/MFbold.otf"
                            android:layout_toRightOf="@id/surat1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@android:color/white"
                            android:textSize="20dp"
                            android:text="E-Office"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/des1eselon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="10dp"
                            android:textSize="35dp"
                            android:text="100"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/menu2"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgall">
                        <ImageView
                            android:id="@+id/surat2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/suratrc"/>
                        <TextView
                            android:id="@+id/jds2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            fontPath="fonts/MFbold.otf"
                            android:layout_toRightOf="@id/surat2"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20dp"
                            android:text="Nota Dinas"
                            tools:ignore="MissingPrefix"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/des2eselon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:textSize="35dp"
                            android:text="90"
                            android:textColor="@android:color/white"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/menu3"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgall">
                        <ImageView
                            android:id="@+id/surat3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/suratrc"/>
                        <TextView
                            android:id="@+id/jds3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            fontPath="fonts/MFbold.otf"
                            android:layout_toRightOf="@id/surat3"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="20dp"
                            android:text="SPT"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/des3eselon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="10dp"
                            android:textSize="35dp"
                            android:text="189"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
