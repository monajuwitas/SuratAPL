<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        card_view:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="35dp"
                android:layout_marginRight="10dp"
                android:layout_height="35dp"
                android:src="@drawable/suratikon"/>
            <TextView
                android:id="@+id/perihal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/icon"
                android:text="Nota Dinas Ke Pulau Sumbawa jahsjasshgs jgsdhsgdh"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/no_notadinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/perihal"
                android:text="101/XX/1001/2013"
                android:textSize="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tanggalnd"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/no_notadinas"
                android:text="2018/09/12"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/statusbacand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/tanggalnd"
                android:text="Status Baca"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>