<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentUmum.ProfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/im_logo"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/man"
                />
            <TextView
                android:id="@+id/namaclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:text="Nama Yang Login"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/deskripsiclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="Jabatan"
                android:textAlignment="center"
                android:textColor="#f4b006"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deskripsiclient"
                >
                <android.support.v7.widget.CardView
                    android:clickable="true"
                    app:cardBackgroundColor="#0eae8a"
                    android:layout_width="match_parent"
                    android:paddingRight="10dp"
                    android:layout_height="190dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:id="@+id/linformasi"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bgcontent"
                        android:layout_marginTop="15dp">
                        <RelativeLayout
                            android:id="@+id/rlnama"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/lbnama"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="sans-serif-condensed"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@android:color/white"
                                android:text="NIP"/>
                            <TextView
                                android:id="@+id/isinamaclient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="196766565656565"
                                android:textColor="@android:color/white"
                                android:layout_alignParentRight="true"
                                android:paddingRight="10dp"
                                />
                            <View
                                android:layout_below="@id/isinamaclient"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#FFF"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlalamat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/lbalamat"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="15dp"
                                android:text="Alamat"/>
                            <TextView
                                android:id="@+id/isialamatclient"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textSize="15dp"
                                android:textColor="@android:color/white"
                                android:text="Jalan bhbhbhb."
                                android:layout_alignParentRight="true"
                                />
                            <View
                                android:layout_below="@id/isialamatclient"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#FFF"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlemail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/lbemail"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@android:color/white"
                                android:text="Email"/>
                            <TextView
                                android:id="@+id/isiemailclient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:paddingRight="10dp"
                                android:textSize="15dp"
                                android:textColor="@android:color/white"
                                android:text="gmail.com"
                                android:layout_alignParentRight="true"
                                />
                            <View
                                android:layout_below="@id/lbemail"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#FFF"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlnohp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/lbnohp"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@android:color/white"
                                android:text="No HP"/>

                            <TextView
                                android:id="@+id/isinohpclient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textSize="15dp"
                                android:paddingRight="10dp"
                                android:textColor="@android:color/white"
                                android:text="08867655646"
                                android:layout_alignParentRight="true"
                                />
                            <View
                                android:layout_below="@id/lbnohp"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#FFF"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>