<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        card_view:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="35dp"
                android:layout_marginRight="10dp"
                android:layout_height="35dp"
                android:src="@drawable/suratikon"/>
            <TextView
                android:id="@+id/e1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/icon"
                android:text="No"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/e1"
                android:text=":"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/e3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/e1"
                android:text="Tgl. Pergi"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e1"
                android:layout_below="@+id/e2"
                android:text=":"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/e3"
                android:text="Perihal"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e1"
                android:layout_below="@+id/e4"
                android:text=":"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_below="@+id/e5"
                android:text="Status Baca"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e1"
                android:layout_below="@+id/e6"
                android:text=":"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/e2"
                android:text="SPT"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e4"
                android:layout_below="@+id/no"
                android:text="9/9/9"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/pengirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e4"
                android:layout_below="@+id/tanggal"
                android:text="aaaa"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/perihal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/e4"
                android:layout_below="@+id/pengirim"
                android:text="status"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/sttsperiksa"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/bgstatus"
                android:text="SPT"
                android:textColor="#000"
                android:textSize="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/e9"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>